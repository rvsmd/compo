{
	"compilerOptions": {
		"target": "es5",
		"outDir": "./dist/",
		"sourceMap": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"types": ["node"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"baseUrl": "src",
		"paths": {
			"@api/*": ["./src/api/*"],
			"@components/*": ["./src/components/*"],
			"@views/*": ["./src/components/views/*"],
			"@router/*": ["./src/router/*"],
			"@assets/*": ["./src/assets/*"],
			"@hooks/*": ["./src/hooks/*"],
		}
	},
	"include": [
		"src",
		"declarations.d.ts"
	],
	"exclude": [
		"node_modules",
	]
}
